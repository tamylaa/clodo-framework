# Customer Staging Environment Variables
# Template for wetechfounders staging environment

# Customer Information
CUSTOMER_NAME=wetechfounders
CUSTOMER_DOMAIN=wetechfounders.com
ENVIRONMENT=staging

# Domain Configuration
DOMAIN=staging.wetechfounders.com
API_DOMAIN=api-staging.staging.wetechfounders.com
AUTH_DOMAIN=auth-staging.staging.wetechfounders.com

# Database Configuration
DATABASE_URL=postgresql://user:password@staging-db:5432/wetechfounders_staging
REDIS_URL=redis://staging-redis:6379/0

# Feature Flags
ENABLE_DEBUG_LOGGING=false
ENABLE_DEVELOPMENT_MODE=false
ENABLE_STRICT_VALIDATION=true

# Security
JWT_SECRET=staging-jwt-secret-wetechfounders
API_KEY=staging-api-key-wetechfounders

# External Services
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
CACHE_TTL=600
RATE_LIMIT=5000